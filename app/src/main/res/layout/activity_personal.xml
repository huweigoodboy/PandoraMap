<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/personal_bg">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBackPressed"
            android:background="@drawable/wallet_base_action_bar_back_normal" />

        <com.map.pandora.widget.RoundImageView
            android:id="@+id/img_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:onClick="onAvatarClicked"
            android:background="@drawable/wallet_personal_mybank_bg" />

        <TextView
            android:id="@+id/tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/img_avatar"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="15112263127" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="注销"
            android:textSize="@dimen/font_18"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onLogout"/>

    </RelativeLayout>
</LinearLayout>