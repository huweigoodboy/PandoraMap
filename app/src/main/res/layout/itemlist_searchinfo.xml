<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_searchresult_type"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_searchresult_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="假数据"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tv_searchresult_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="假数据"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_searchresult_plus"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:src="@drawable/default_generalsearch_btn_plus_normal" />

</LinearLayout>